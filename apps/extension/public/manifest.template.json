{
  "manifest_version": 3,
  "name": "Stashed",
  "version": "1.0.0",
  "description": "An open-source alternative to Pocket for saving and organizing web pages",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "__WEB_APP_URL__/*"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["__WEB_APP_URL__/*"],
      "js": ["content/index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pages/login/index.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 